<div class="hamburger-container">
	<div class="hamburger-line"></div>
</div>

<style>
	.hamburger-container {
		font-size: 2rem;
		width: 1em;
		height: 1em;
		position: relative;
		overflow: hidden;
	}
	.hamburger-line {
		width: 100%;
		height: 15%;
		background-color: black;
		border-radius: 0.1em;
		position: absolute;
		top: 40%;
	}
	.hamburger-line::before,
	.hamburger-line::after {
		content: '';
		width: 100%;
		height: 100%;
		background-color: black;
		border-radius: 0.1em;
		position: absolute;
		left: 0;
		transition: all 0.3s;
	}

	.hamburger-line::before {
		top: -250%;
	}
	.hamburger-line::after {
		bottom: -250%;
	}

	:global(*[aria-expanded='true']) .hamburger-line::before {
		top: 0;
		transform: rotate(45deg);
	}
	:global(*[aria-expanded='true']) .hamburger-line {
		background-color: transparent;
	}
	:global(*[aria-expanded='true']) .hamburger-line::after {
		bottom: 0;
		transform: rotate(-45deg);
	}
</style>
